<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:fbb="urn:import:ie.sortons.gwtfbplus.client.widgets.buttons">

	<ui:style>

		.settingsTable {
		width: 100%;

		border-collapse: collapse;

		cellspacing:0;

		border-top: 1px solid #aaa;
		border-bottom: 1px solid #aaa;
		}

		.settingsTable tr {
		height: 34px;
		border-top: 1px solid #e9e9e9;
		}

		.settingsTable tr:hover {
		background-color: #f7f7f7;
		}

		.settingsTable th {
		vertical-align: top;
		padding-top: 10px;
		font-weight: bold;
		color: #333;
		padding-left: 10px;
		}

		.settingsTable td {
		padding: 10px;
		}


		.addPageTextBox {
		width: 450px;
		}

		.addPageButton {
		display: inline-block;
		}

		.displayNone {
		display: none;
		}

	</ui:style>
	<g:HTMLPanel>

		<table class="{style.settingsTable}">
			<tr>
				<th>Add Page:</th>
				<td>
					<g:TextBox ui:field="addPageTextBox" addStyleNames="{style.addPageTextBox}" />
					<fbb:BlueButton text="Add Page" ui:field="addPageButton" />
				</td>
			</tr>
			<tr>
				<th>Suggestions:</th>
				<td>
					<fbb:GreenButton text="Login" ui:field="loginButton" addStyleNames="{style.displayNone}"/>
					<g:FlowPanel ui:field="suggestedPagesPanel" />
				</td>
			</tr>
			<tr>
				<th>Included Pages:</th>
				<td>
					<g:FlowPanel ui:field="includedPagesPanel" />
				</td>
			</tr>
		</table>

	</g:HTMLPanel>
</ui:UiBinder> 