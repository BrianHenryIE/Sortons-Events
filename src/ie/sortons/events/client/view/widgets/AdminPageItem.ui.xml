<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.picture {
			position: relative;
			padding: 5px;
			display: inline-block;
			margin-right: 7px;
			margin-bottom: 10px;
		}

.text {
	display: inline-block;
	vertical-align: top;
}



.item:hover {
	background-color: #E7EBF2;
}

.buttons {
	float:right;
}

	</ui:style>

	<g:FlowPanel addStyleNames="{style.item}">
	
		<g:FlowPanel addStyleNames="{style.picture}" >	
		
			<g:HTMLPanel ui:field="picPanel" />		
	
			
		</g:FlowPanel>
		
		<g:FlowPanel addStyleNames="{style.text}" >
		    
		    <g:Anchor ui:field="name" />
		    <g:Label ui:field="location" />
		    
		</g:FlowPanel>
		
		<g:FlowPanel addStyleNames="{style.buttons}" >
		    
			
				<g:Image ui:field="addButton"/>
				<g:Image ui:field="ignoreButton"/>
			
		</g:FlowPanel>
		
	</g:FlowPanel>
	
</ui:UiBinder> 