<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.item {
			position: relative;
			padding: 5px;
			display: inline-block;
			margin-right: 7px;
			margin-bottom: 10px;
		}

.addButtonPic {
			position: absolute;
			top: 0;
			left: 0;
cursor:pointer
}

.ignoreButtonPic {
			position: absolute;
			top: 0;
			right: 0;
cursor:pointer
}


	</ui:style>

	<g:FlowPanel addStyleNames="{style.item}" >	
	
		<g:HTMLPanel ui:field="picPanel" />		

		<g:SimplePanel addStyleNames="{style.addButtonPic}">
			<g:Image ui:field="addButton"/>
		</g:SimplePanel>
		
		<g:SimplePanel addStyleNames="{style.ignoreButtonPic}">
			<g:Image ui:field="ignoreButton"/>
		</g:SimplePanel>
	</g:FlowPanel>
</ui:UiBinder> 