<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:fbb="urn:import:ie.sortons.gwtfbplus.client.widgets.buttons">
	<ui:style>
		.item {
		width: 100%;
		position: relative;
		padding: 5px;
		}

		.item:hover {
		background-color:
		#E7EBF2;
		}

		.picture {
		position: relative;
		display: inline-block;
		margin-right: 7px;
		}

		.text {
		display: inline-block;
		vertical-align: top;
		}

		.buttons {
		position: absolute;
		right: 0;
		margin-top: 1px;
		display: inline-block;
		}

		.button {
		display: inline-block;
		vertical-align: middle;
		margin-right: 3px;
		}

	</ui:style>

	<g:FlowPanel ui:field="flowPanel" addStyleNames="{style.item}">

		<g:FlowPanel addStyleNames="{style.picture}">

			<g:HTMLPanel ui:field="picPanel" />

		</g:FlowPanel>

		<g:FlowPanel addStyleNames="{style.text}">

			<g:Anchor ui:field="name" />
			<g:Label ui:field="location" />

		</g:FlowPanel>

		<g:FlowPanel addStyleNames="{style.buttons}">

			<fbb:GreyButton text="Add" ui:field="addButton" addStyleNames="{style.button}" />
			<fbb:XableButton ui:field="ignoreButton" addStyleNames="{style.button}" title="Remove" />

		</g:FlowPanel>

	</g:FlowPanel>

</ui:UiBinder> 