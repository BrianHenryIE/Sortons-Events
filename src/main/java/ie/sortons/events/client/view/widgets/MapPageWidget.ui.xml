<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

		a {
		color: #3B5998;
		cursor: pointer;
		text-decoration: none;
		}


		a:visited {
		color: #3B5998;
		}

		a:hover {
		color: #3B5998;
		text-decoration: underline;
		}


		.eventWidget {
		width: 400px;

		margin-left: -200px;
		margin-top: -10px;

		padding: 5px;

		border-color: rgba(0, 0, 0, 0.45) rgba(0, 0, 0, 0.45) #666666;
		border-style: solid;
		border-width: 1px;
		box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);

		background-color: #FFFFFF;

		}


		.eventWidget:after, .eventWidget:before {
		border: solid transparent;
		content: ' ';
		height: 0;

		position: absolute;
		width: 0;

		}

		.eventWidget:after {
		border-width: 7px;
		border-top-color: white;
		right: 195px;
		bottom: -13px;
		}

		.eventWidget:before {
		border-width: 9px;
		border-top-color: #666666;
		right: 193px;
		bottom: -17px;
		}

		.picture {
		width: 50px;
		height: 50px;
		}

		.details {
		margin-left: 10px;

		}


		.link {

		font-weight: bold;
		font-size : 13px;
		}


		.lowerLinks {

		font-weight: bold;
		font-size: 11px;
		}


		.startTime {
		color: gray;
		line-height:1.6;
		}

	</ui:style>

	<g:SimplePanel>

		<g:HorizontalPanel addStyleNames="{style.eventWidget}">

			<g:cell width="50px">
				<g:Image addStyleNames="{style.picture}" ui:field="picture" />
			</g:cell>

			<g:VerticalPanel addStyleNames="{style.details}">

				<g:Anchor addStyleNames="{style.link}" ui:field="title" />

				<g:Label ui:field="about"/>
				
			</g:VerticalPanel>

		</g:HorizontalPanel>

	</g:SimplePanel>

</ui:UiBinder> 